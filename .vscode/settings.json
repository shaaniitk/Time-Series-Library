{
	"python.testing.pytestArgs": [
		"tests"
	],
	"python.testing.unittestEnabled": false,
	"python.testing.pytestEnabled": true,
	
	// ===============================================
	// PERFORMANCE OPTIMIZATIONS FOR LARGE PROJECT
	// ===============================================
	
	// Exclude large directories from file watching (major performance boost)
	"files.watcherExclude": {
		"**/node_modules/**": true,
		"**/checkpoints/**": true,
		"**/logs/**": true,
		"**/test_results/**": true,
		"**/trained/**": true,
		"**/tsl-env/**": true,
		"**/.git/**": true,
		"**/data/**": true,
		"**/*.zip": true,
		"**/pic/**": true,
		"**/__pycache__/**": true,
		"**/*.pyc": true,
		"**/.pytest_cache/**": true,
		"**/test_*.py": true,
		"**/simple_*.py": true,
		"**/run_*.py": true,
		"**/verify_*.py": true,
		"**/validate_*.py": true,
		"**/monitor_*.py": true
	},
	
	// Exclude from search (faster search)
	"search.exclude": {
		"**/node_modules": true,
		"**/checkpoints": true,
		"**/logs": true,
		"**/test_results": true,
		"**/trained": true,
		"**/tsl-env": true,
		"**/data": true,
		"**/*.zip": true,
		"**/pic": true,
		"**/__pycache__": true,
		"**/*.pyc": true,
		"**/.pytest_cache": true
	},
	
	// Hide clutter from explorer
	"files.exclude": {
		"**/__pycache__": true,
		"**/*.pyc": true,
		"**/.pytest_cache": true
	},
	
	// Python/Pylance performance optimizations
	"python.analysis.autoSearchPaths": false,
	"python.analysis.indexing": false,
	"python.analysis.autoImportCompletions": false,
	"python.analysis.userFileIndexingLimit": 50,
	"python.analysis.memory.keepLibraryAst": false,
	"python.analysis.completeFunctionParens": false,
	"python.analysis.addImport.exactMatchOnly": true,
	"python.analysis.packageIndexDepths": [
		{
			"name": "",
			"depth": 1
		}
	],
	"python.analysis.exclude": [
		"**/checkpoints/**",
		"**/logs/**",
		"**/test_results/**", 
		"**/trained/**",
		"**/tsl-env/**",
		"**/data/**",
		"**/test_*.py",
		"**/simple_*.py",
		"**/run_*.py",
		"**/verify_*.py",
		"**/validate_*.py",
		"**/monitor_*.py",
		"**/pic/**"
	],
	
	
	// Jupyter optimizations
	"jupyter.askForKernelRestart": false,
	"jupyter.enableExtendedPythonKernelCompletions": false,
	
	"python-envs.pythonProjects": []
}