{
    "mcpServers": {"github": {
			"type": "http",
			"url": "https://api.githubcopilot.com/mcp/"
		},
		"sequentialthinking": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-sequential-thinking"
			],
			"type": "stdio"
		},
		"huggingface": {
			"type": "http",
			"url": "https://hf.co/mcp",
			"gallery": true
		},
		"filesystem": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-filesystem",
				"D:\\workspace"
			],
			"type": "stdio"
		},
		"yfinance": {
			"command": "C:\\Users\\mishr\\.local\\bin\\uv.exe",
			"args": [
				"--directory",
				"D:\\workspace\\yahoo-finance-mcp",
				"run",
				"server.py"
			],
			"type": "stdio"
		},
		"zen": {
			"command": "C:\\Users\\mishr\\.local\\bin\\uv.exe",
			"args": [
				"--directory",
				"D:\\workspace\\zen-mcp-server",
				"run",
				"server.py"
			],
			"type": "stdio"
		},
		"serena": {
			"command": "C:\\Users\\mishr\\.local\\bin\\uv.exe",
			"args": [
				"--directory",
				"D:\\workspace\\serena",
				"run",
				"serena-mcp-server"
			],
			"type": "stdio"
		},
		"desktop-commander": {
			"command": "npx",
			"args": [
				"-y",
				"@wonderwhy-er/desktop-commander"
			],
			"type": "stdio"
		},
		"memory": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-memory@latest"
			],
			"env": {
				"MEMORY_FILE_PATH": "D:\\workspace\\memory_banks"
			},
			"autoApprove": [
			"memory_bank_read",
			"memory_bank_write",
			"memory_bank_update",
			"list_projects",
			"list_project_files"
			],
			"gallery": true
		}
	},
	"python.testing.pytestArgs": [
		"tests"
	],
	"python.testing.unittestEnabled": false,
	"python.testing.pytestEnabled": true,
	
	// ===============================================
	// PERFORMANCE OPTIMIZATIONS FOR LARGE PROJECT
	// ===============================================
	
	// Exclude large directories from file watching (major performance boost)
	"files.watcherExclude": {
		"**/node_modules/**": true,
		"**/checkpoints/**": true,
		"**/logs/**": true,
		"**/test_results/**": true,
		"**/trained/**": true,
		"**/tsl-env/**": true,
		"**/.git/**": true,
		"**/data/**": true,
		"**/*.zip": true,
		"**/pic/**": true,
		"**/__pycache__/**": true,
		"**/*.pyc": true,
		"**/.pytest_cache/**": true
	},
	
	// Exclude from search (faster search)
	"search.exclude": {
		"**/node_modules": true,
		"**/checkpoints": true,
		"**/logs": true,
		"**/test_results": true,
		"**/trained": true,
		"**/tsl-env": true,
		"**/data": true,
		"**/*.zip": true,
		"**/pic": true,
		"**/__pycache__": true,
		"**/*.pyc": true,
		"**/.pytest_cache": true
	},
	
	// Hide clutter from explorer
	"files.exclude": {
		"**/__pycache__": true,
		"**/*.pyc": true,
		"**/.pytest_cache": true
	},
	
	// Python/Pylance performance optimizations
	"python.analysis.autoSearchPaths": false,
	"python.analysis.indexing": false,
	"python.analysis.packageIndexDepths": [
		{
			"name": "",
			"depth": 2
		}
	],
	"python.analysis.exclude": [
		"**/checkpoints/**",
		"**/logs/**",
		"**/test_results/**", 
		"**/trained/**",
		"**/tsl-env/**",
		"**/data/**"
	],
	
	// Jupyter optimizations
	"jupyter.askForKernelRestart": false,
	"jupyter.enableExtendedPythonKernelCompletions": false,
	
	// Git optimizations
	"git.autorefresh": false,
	"git.autofetch": false,
	
	// Editor performance
	"editor.semanticHighlighting.enabled": false,
	"editor.suggest.filterGraceful": false,
	"editor.acceptSuggestionOnCommitCharacter": false,
	
	// Extensions
	"extensions.autoUpdate": false,
	"extensions.autoCheckUpdates": false,
	
	// Disable telemetry for performance
	"telemetry.telemetryLevel": "off"
}